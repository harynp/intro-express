<!DOCTYPE html>
<html>
  <%-include partials/head.ejs%>
      <style>
    table {
       width: 100%;
    }
    td {
    height: 50px;
    vertical-align: center;
    }
    th, td {
    padding: 10px;
    text-align: left;
    }
    tr:nth-child(even) {
      background-color: #f2f2f2
    }
    th {
    background-color: #4CAF50;
    color: white;
    }
    .button {
    background-color: #4CAF50; /* Green */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 50%;
}
      </style>
  <body>
    <h1>Halaman Teachers</h1>
    <a href="/teachers/add"><button>Add</button></a>
    <table border='2px'>
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%data.forEach( rows => { %>
          <tr>
            <td><%=rows.id%></td>
            <td><%=rows.first_name%></td>
            <td><%=rows.last_name%></td>
            <td><%=rows.first_name+' '+rows.last_name%></td>
            <td><%=rows.email%></td>
            <td><%=rows.Subject.subject_name%></td>
            <td>
              <a href="/teachers/edit/<%=rows.id%>"><button>Edit</button></a>
              <a href="/teachers/delete/<%=rows.id%>"><button>Delete</button></a>
            </td>
          </tr>
        <% })%>
      </tbody>
      </table>
  </body>
    <%-include partials/footer.ejs%>
</html>
